                <dict>
                    <key>output_plist_path</key>
                    <string>%pkgroot%/Library/LaunchAgents/at.obdev.LittleSnitchHelper.plist</string>
                    <key>plist_data</key>
                    <dict>
                        <key>KeepAlive</key>
                        <true/>
                        <key>Label</key>
                        <string>at.obdev.LittleSnitchHelper</string>
                        <key>ProgramArguments</key>
                        <array>
