                        <string>at.obdev.littlesnitchd</string>
                        <key>ProgramArguments</key>
                        <array>
                            <string>/Library/Little Snitch/Little Snitch Daemon.bundle/Contents/MacOS/Little Snitch Daemon</string>
                        </array>
                        <key>RunAtLoad</key>
                        <true/>
