                            <dict>
                                <key>path</key>
                                <string>Library/Little Snitch/Little Snitch Helper.app</string>
                                <key>user</key>
                                <string>root</string>
                                <key>group</key>
                                <string>wheel</string>
                                <key>mode</key>
                                <string>0755</string>
                            </dict>
                            <dict>
