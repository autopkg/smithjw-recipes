                        <string>/Library/Logs/LittleSnitchDaemon.log</string>
                        <key>StandardOutPath</key>
                        <string>/Library/Logs/LittleSnitchDaemon.log</string>
                    </dict>
                </dict>
            </dict>
            <dict>
                <key>Processor</key>
                <string>PkgInfoCreator</string>
                <key>Arguments</key>
                <dict>
                    <key>infofile</key>
                    <string>%RECIPE_CACHE_DIR%/PackageInfo</string>
                    <key>pkgtype</key>
                    <string>flat</string>
                    <key>template_path</key>
                    <string>PackageInfoTemplate</string>
                </dict>
            </dict>
